<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="carrier"
            type="az.squareroot.customstaxescalc.database.datastructure.Carrier" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/layout_carrier_card"
        app:checkedIconTint="@color/white"
        android:checkable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="15dp">

        <net.colindodd.gradientlayout.GradientRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            app:bindColor="@{carrier}"
            app:orientation="RIGHT_LEFT">

            <ImageView
                android:id="@+id/image_carrier"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@id/label_carrier_name"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/description_carrier_image"
                app:bindImage="@{carrier}"
                tools:srcCompat="@drawable/logo_mover" />

            <TextView
                android:id="@+id/label_carrier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@id/image_carrier"
                android:fontFamily="@font/quicksand_medium"
                android:text="@{carrier.name}"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/label_carrier_name_size"
                android:textStyle="bold"
                tools:text="Limak" />

            <TextView
                android:id="@+id/label_carrier_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_carrier_name"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/image_carrier"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"
                app:bindPrice="@{carrier}"
                tools:text="Price: 1.99$ - 5.99$" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/label_carrier_price"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/image_carrier"
                android:fontFamily="@font/quicksand_medium"
                android:textColor="@color/primaryTextColor"
                android:textSize="16sp"
                app:bindWarehouses="@{carrier}"
                tools:text="Warehouses: Baku, Ganja, Barda" />

        </net.colindodd.gradientlayout.GradientRelativeLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>